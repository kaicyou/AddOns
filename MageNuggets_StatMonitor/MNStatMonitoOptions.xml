<Script file="MNStatMonitorOptions.lua" ></Script>

<Frame name="MNStatMonitorOptionsOnLoadFrame">
    <Scripts>
        <OnLoad> 
            self.TimeSinceLastUpdate = 0;
            MNStatMonitorOptions_OnLoad(self);
        </OnLoad>
        <OnUpdate> 
        </OnUpdate>
        <OnEvent>
            MNStatMonitorOptions_OnEvent(self, event, ...);
        </OnEvent>
    </Scripts>
</Frame>



